<h1>Edit User Information</h1>
<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= button_to "Delete Profile", user_path, method: "delete", data:  {confirm: "Are you sure?" } %>